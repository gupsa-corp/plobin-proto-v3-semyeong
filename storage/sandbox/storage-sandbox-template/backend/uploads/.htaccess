# 업로드 디렉토리 보안 설정
# 스크립트 파일 실행 차단
<Files "*">
    SetHandler default-handler
</Files>

# PHP 파일 실행 차단
<Files "*.php">
    Deny from all
</Files>

<Files "*.php3">
    Deny from all
</Files>

<Files "*.php4">
    Deny from all
</Files>

<Files "*.php5">
    Deny from all
</Files>

<Files "*.phtml">
    Deny from all
</Files>

# 일반적인 실행 파일 차단
<FilesMatch "\.(exe|bat|cmd|com|scr|vbs|js|jar)$">
    Deny from all
</FilesMatch>

# 디렉토리 브라우징 차단
Options -Indexes

# 직접 접근 시 다운로드 강제
<FilesMatch ".*">
    Header set Content-Disposition "attachment"
</FilesMatch>